.fadeout {
  opacity: 0 !important;
}
.fadein {
  opacity: 1 !important;
}
.transform {
  animation: icontrans 1s 2s forwards;
}
.intro {
  opacity: 0;
}
.intro1 {
  opacity: 1;
  transition: 1s !important;
}
.intro2 {
  opacity: 1;
  transition: 1s .5s !important;
}
.intro3 {
  opacity: 1;
  transition: 1s 1s !important;
}
@keyframes icontrans {
  to{
    transform: translateY(-170rpx) scale(0.5,0.5);
  }
}

.content {
  width: 100%;
  height: 900rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.content text {
  font-size: 40rpx;
  color: #6c4420;
  display: block;
  text-align: center;
}
.roll {
  width: 100%;
  height: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.roll text {
  font-size: 30rpx;
  color: #a1652f;
  transition: .5s;
}
.coin {
  width: 100%;
  height: 600rpx;
  transition: .5s;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.coin .list {
  width: 100%;
  min-height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.coin .list view {
  text-align: center;
  transition: 1s;
}
.coin .list text,.coin .list input {
  display: inline-block;
  font-size: 35rpx;
  color: #a1652f;
  transition: 1s;
}
.coin .list input {
  min-width: 500rpx;
}
.coin .listbtns {
  display: flex;
}
.coin .btn {
  display: block;
  margin-right: 10rpx;
  width: 80rpx;
  height: 80rpx;
  border: #a1652f 5rpx solid;
  border-radius: 50rpx;
  text-align: center;
}
.coin .btn text {
  color: #a1652f;
  font-size: 50rpx;
}
.roll .tips {
  position: absolute;
  bottom: 300rpx;
  animation: tips .5s 2.5s backwards;
}
@keyframes tips {
  from{opacity: 0}
  to{opacity: 1}
}
.roll .replay {
  position: absolute;
  bottom: 230rpx;
  width: 150rpx;
  border-bottom: #a1652f 1rpx solid;
  animation: tips .5s 3s backwards;
}
.content .button {
  position: fixed;
  bottom: 150rpx;
  font-size: 35rpx;
  width: 100rpx;
  color: #a1652f;
  border-bottom: #a1652f 1rpx solid;
}

.roll .finish .list view {
  margin-bottom:50rpx;
}
.remove text{
  text-decoration: line-through;
}